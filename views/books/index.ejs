<h2>Search Book</h2>

<form action="/books" method="GET">
    <label>Title</label>
    <input type="text" name="title" value="<%=searchOptions.title%>">
    <br>
    <label>Published Before</label>
    <input type="date" value="<%= searchOptions.publishedBefore %>" name="publishedBefore">
    <br>
    <label>Published After</label>
    <input type="date" value="<%= searchOptions.publishedAfter %>" name="publishedAfter">
    <br>
    <button type="submit">Search</button>
</form>
<br>
<div>
    <% books.forEach((book) => { %>
        <img src="<%= book.coverImagePath %>" height="150" width="100">
    <% }) %>
</div>


